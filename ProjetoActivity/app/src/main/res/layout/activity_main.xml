<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="toast.cursoandroid.com.projetoactivity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:visibility="visible"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/clienteID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/empresaID"
            android:layout_alignStart="@+id/empresaID"
            android:layout_below="@+id/empresaID"
            android:layout_marginTop="34dp"
            android:visibility="visible"
            app:srcCompat="@drawable/menu_cliente" />

        <ImageView
            android:id="@+id/servicosID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignTop="@+id/empresaID"
            android:visibility="visible"
            app:srcCompat="@drawable/menu_servico" />

        <ImageView
            android:id="@+id/contatoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/servicosID"
            android:layout_alignStart="@+id/servicosID"
            android:layout_alignTop="@+id/clienteID"
            android:visibility="visible"
            app:srcCompat="@drawable/menu_contato" />

        <ImageView
            android:id="@+id/empresaID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="44dp"
            android:contentDescription="lll"
            android:visibility="visible"
            app:srcCompat="@drawable/menu_empresa" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
