<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5e9b9"
    android:visibility="visible"
    tools:context="somdosbichos.cursoandroid.com.somdosbichos.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="Ola"
        app:layout_constraintLeft_toLeftOf="@+id/ovelhaId"
        app:layout_constraintRight_toLeftOf="@+id/ovelhaId"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/cachorroId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        app:layout_constraintLeft_toRightOf="@+id/gatoId"
        app:layout_constraintTop_toTopOf="@+id/gatoId"
        app:srcCompat="@drawable/cao"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/gatoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cachorroId"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/cachorroId"
        android:layout_toRightOf="@+id/cachorroId"
        app:layout_constraintLeft_toLeftOf="@+id/macacoId"
        app:layout_constraintTop_toBottomOf="@+id/macacoId"
        app:srcCompat="@drawable/gato"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/leaoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cachorroId"
        android:layout_alignStart="@+id/cachorroId"
        android:layout_below="@+id/cachorroId"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="29dp"
        app:layout_constraintLeft_toLeftOf="@+id/ovelhaId"
        app:layout_constraintTop_toBottomOf="@+id/ovelhaId"
        app:srcCompat="@drawable/leao"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/macacoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/leaoId"
        android:layout_alignLeft="@+id/gatoId"
        android:layout_alignStart="@+id/gatoId"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="@+id/vacaId"
        app:layout_constraintTop_toBottomOf="@+id/vacaId"
        app:srcCompat="@drawable/macaco"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:contentDescription="" />

    <ImageView
        android:id="@+id/ovelhaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/leaoId"
        android:layout_alignRight="@+id/leaoId"
        android:layout_below="@+id/leaoId"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="21dp"
        android:contentDescription="Ola"
        app:layout_constraintLeft_toRightOf="@+id/vacaId"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/ovelha"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/vacaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ovelhaId"
        android:layout_alignLeft="@+id/macacoId"
        android:layout_alignStart="@+id/macacoId"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="21dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/vaca"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
