<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="whatsapp.cursoandroid.com.instagram.activity.activity.CadastroActivity"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/fundo_degrade">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/text_usuario"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="Digite seu usuário"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="126dp"
        android:layout_marginTop="126dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textSenha"
        android:layout_alignStart="@+id/textSenha" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="Digite seu e-mail"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="199dp"
        android:layout_below="@+id/textSenha"
        android:layout_alignLeft="@+id/textSenha"
        android:layout_alignStart="@+id/textSenha"
        android:layout_marginTop="19dp" />

    <EditText
        android:id="@+id/textSenha"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="Digite sua senha"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="267dp"
        android:layout_below="@+id/text_usuario"
        android:layout_alignLeft="@+id/textButton"
        android:layout_alignStart="@+id/textButton"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/textButton"
        android:background="@drawable/fundo_botao"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="390dp"
        android:layout_below="@+id/textEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="abrirLogin"
        android:text="Ja tem conta, faça login!" />
    </RelativeLayout>
</RelativeLayout>
